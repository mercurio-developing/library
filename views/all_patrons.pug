doctype html
html
  head
    title Patrons
    link(rel='stylesheet',  href="/static/stylesheets/style.css" type='text/css')
  include ./partials/_nav.pug
  body
    h1 Patrons
    p
      a.button(href='new_patron') Create New Patron
    table
      thead
        tr
          th Name 
          th Address
          th Email
          th Library ID
          th Zip
      tbody
        each patron in patrons
          tr
            td
              a(href='/patrons/patron_detail/' + patron.id) #{patron.first_name} #{patron.last_name} 
            td #{patron.address} 

            td #{patron.email} 
            
            td #{patron.library_id} 
            
            td #{patron.zip_code} 
          